<header id="imagebackground">
	<div id="container">
		<div id="contentAuthentication">

			<div class="container">
		        <div class="card card-container">
		            <img id="profile-img" class="profile-img-card" src="//ssl.gstatic.com/accounts/ui/avatar_2x.png" />
		            <p id="profile-name" class="profile-name-card">Forgot password</p>
					<br />
		            <p class="flash">
		              <%= flash.alert %>
		            </p>

					<%= form_for(:password_reset, url: password_resets_path, :html => {class: 'form-signin'}) do |f| %>

		                <%= f.text_field :email, :id => "inputEmail", :class => "form-control", :placeholder => "Email address", :required => true, :autofocus => true %>

		               	<%= submit_tag "Send me my password", :class => "btn btn-lg btn-primary btn-block btn-signin" %>
					<% end %>
		        </div><!-- /card-container -->
	        </div>

		</div>
		  <div id="footer">
		        <%= render "layouts/footer" %>
		  </div>
	</div>
</header>
