<div id="profile-page-wall-post" class="card">
                        <div class="card-profile-title">
                          <div class="row">
                            <div class="col s1 circle responsive-img valign profile-post-uer-image" style="background: url(<%= user_avatar() %>) 50% 50% no-repeat; width: 33px; height: 33px; background-size:cover; margin-left: 10px; margin-top:5px;">                        
                            </div>
                            <div class="col s10 profile-post-name">
                              <p class="grey-text text-darken-4 margin"><%= current_user.firstname + ' ' + current_user.lastname %></p>
                              <!--<span class="grey-text text-darken-1 ultra-small"><%= Time.zone %> <%= Time.zone.parse(wallpost.created_at.to_formatted_s(:long_ordinal)) %></span>-->
                              <span class="grey-text text-darken-1 ultra-small"><%= wallpost.created_at.to_formatted_s(:long_ordinal) %></span>
                            </div>
                            <div class="col s1 right-align">
                              <!--<i class="mdi-navigation-expand-more"></i>-->
                              <%= link_to wallpost, method: :delete, data: { confirm: 'Are you sure you want to delete this post?'}, :remote => true do %>
                                <i class="mdi-navigation-close"></i>
                              <% end %>
                             
                            </div>
                          </div>
                          <div class="row">
                            <div class="col s12">
                              <p><%= wallpost.message %></p>
                            </div>
                          </div>
                        </div>
                        <% if wallpost.picture? %>
                        <div class="card-image profile-medium">                          
                          <img src="<%= collectWallpostPicture(wallpost.picture) %>" alt="wallpost-image" class="responsive-img profile-post-image profile-medium">                        
                          <!--<span class="card-title">Card Title</span>-->
                        </div>
                        <% end %>
                        <div class="card-action row">
                          <div class="col s4 card-action-share">
                            <a href="#">Like</a>                          
                            <a href="#">Share</a>
                          </div>
                          
                          <div class="input-field col s8 margin">
                            <input id="profile-comments" type="text" class="validate margin">
                            <label for="profile-comments" class="">Comments</label>
                          </div>                        
                        </div>                        
                      </div>