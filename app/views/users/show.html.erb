                            <div class="row">
                                <div class="col s5 grey-text darken-1"><i class="mdi-social-domain"></i> <%= I18n.t('views.user.show.livingin') %></div>
                                <div class="col s7 grey-text text-darken-4 right-align">
                                    <%= $show_user.address.try(:city).try(:name) %>
