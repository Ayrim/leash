                                        <div class="card-content white-text center-align">
                                            <p class="card-title"><i class="mdi-social-group-add"></i> <%= $show_user.connections.count %></p>
                                            <p><%= I18n.t('views.user.connections') %></p>
                                        </div>
                                    </div>
