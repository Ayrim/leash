                        <div class="card-content white-text center">
                            <span class="card-title"><i class="fa fa-paw" aria-hidden="true"></i> <span class="hide-on-small-only"><%= I18n.t('views.user.dogs') %></span></span>
                        </div>
                    </div>
                </div>
                <div class=" col s4 m4">
