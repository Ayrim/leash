                            <a class="btn-floating activator waves-effect waves-light darken-2 right showProfileDetails">
                                <i class="mdi-action-perm-identity"></i>
                            </a>
                        </div>
                        <% if $show_user.id == current_user.id %>
                            <div class="col s1 right-align editBtnHeader">
                                <%= link_to edit_settings_path, :class => 'btn-floating waves-effect waves-light darken-2 right' do %>
                                    <i class="mdi-image-edit"></i>
                                <% end %>
                            </div>
                        <% end %>
                    </div>
                </div>
                <div class="card-reveal" style="top: 99%">
                    <div>
                        <p>
                            <span class="card-title grey-text text-darken-4 HideGoogleMapsTitle"><%= $show_user.firstname + ' ' + $show_user.lastname %> <i class="mdi-navigation-close right"></i></span>
                            <% if $show_user.is_premium %>
                                <span><i class="mdi-action-perm-identity cyan-text text-darken-2"></i> <%= I18n.t('views.user.show.premiumuser') %></span>
                            <% end %>
                        </p>
                        <div style="float:left; max-width:49%">
                            <p><%= $show_user.description %></p>

                            <p><i class="mdi-action-perm-phone-msg cyan-text text-darken-2"></i> <%= $show_user.phone %></p>
                            <p><i class="mdi-communication-email cyan-text text-darken-2"></i> <%= $show_user.email %></p>
                            <p>
                                <i class="mdi-social-cake cyan-text text-darken-2"></i>
