<%= stylesheet_link_tag "application", params[:controller], :media => "all" %>

<!-- START CONTENT -->
<section id="content">

    <!--start container-->
    <div class="container">

        <div id="profile-page" class="section">
            <!-- profile-page-header -->
            <div id="profile-page-header" class="card hide-on-med-and-down">
                <div class="card-image waves-effect waves-block waves-light showProfileDetails">
                    <div id="add_connection_button_large">
                        <%= render template: "users/show_add_connection" %>
                    </div>
                    <img class="activator showProfileDetails" src="<%= load_user_banner($show_user) %>" alt="user background">
                </div>
                <figure class="card-profile-image circle z-depth-2 responsive-img activator showProfileDetails" style="background: url(<%= load_user_avatar($show_user) %>) 50% 50% no-repeat; width: 110px; height: 110px; background-size:cover;">
                </figure>
                <div class="card-content">
                    <div class="row">
                        <div class="col s3 offset-s2 personName">
                            <h4 class="card-title grey-text text-darken-4">
                                <%= $show_user.firstname + ' ' + $show_user.lastname %>
                            </h4>
                            <% if $show_user.is_premium %>
                                <p class="medium-small grey-text"><%= I18n.t('views.user.show.premiumuser') %></p>
                            <% elsif ($show_user.id == current_user.id) %>
