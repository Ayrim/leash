  <div id="container">
    <div id="content">
      <div id="loginbox" class="container-fluid text-center">
        <div class="titlebox">
  <h1>Sign in</h1>

  <p class="flash">
    <%= flash.alert %>
  </p>
      </div>
        <div class="form-group">
  <%= form_tag user_sessions_path, method: :post do %>
    <div class="field">
        <%= text_field_tag :email, nil, :class => "form-field", :placeholder => "email" %>
      <br/>
    </div>
    <div class="field">
            <%= password_field_tag :password, nil, :class => "form-field", :placeholder => "password"  %>
      <br/>
    </div>
    <div class="field rememberme">
      <%= check_box_tag :remember, params[:remember], true%>
      <%= label_tag :remember %>
      <br />
    </div>
    </div>
    <div class="actions">
        <%= submit_tag "Login", :class => "btn btn-primary buttons" %>
    </div>
  <% end %>
</div>
  </div>
  <div id="footer">
    <p>Copyright (c) 2016</p>
  </div>
</div>