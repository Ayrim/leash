<%= stylesheet_link_tag "application", params[:controller], :media => "all" %>
<%= stylesheet_link_tag "fullcalendar", :media => "all" %>


<div class="container">

  <div class="row" >

    <% @dog.each do |dog| %>
      <%= link_to dog_path(dog) do %>
        <div class="col" >
        <ul class="collection z-depth-1 with-header hoverable card" style="width: 280px; height: 400px;">
          <li class="collection-header"><strong><%= dog.animal.name %></strong></li>

          <img src="/assets/dog-silhouette.png" alt="" class="circle" style="width:250px;padding-top: 15px; padding-bottom: 15px;padding-left: 15px;">

          <li class="collection-item avatar">

            <span class="title truncate"><%=dog.breed%></span>
            <p>Home
            </p>
          </li>
        </ul>
      </div>
    <% end %>
  <% end %>

  <%= link_to new_dog_path do %>
    <div class="col s6 m4 l3">
      <div class="card z-depth-1 hoverable">
        <div class="card-image waves-effect waves-block waves-light"  style="max-height:20vh; height:400px;" >
          <div style="height:100%; width:auto;">
            <div class="card-image waves-effect waves-block waves-light bigplus-button">
            </div>
          </div>
        </div>
        <div class="card-content">
          <span class="card-title activator truncate">&nbsp;</span>
          <p class="truncate center">Hond toevoegen</p>
        </div>
      </div>
    </div>
  <% end %>

  </div>
</div>
